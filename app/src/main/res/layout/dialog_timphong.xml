<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:id="@+id/rel"
        android:background="@drawable/backmaphong">

        <EditText
            android:id="@+id/tvname"
            android:layout_width="240dp"
            android:layout_height="66dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/tv_doiten"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/sedgwickave_regular"
            android:hint="Nhập mã phòng (6 chữ số)"
            android:inputType="number"
            android:textAlignment="center"
            android:textStyle="bold">

        </EditText>
        <TextView
            android:id="@+id/chuy"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text="Phòng không tồn tại"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:visibility="gone"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tvname"
            android:textStyle="italic">

        </TextView>
        <Button
            android:id="@+id/btnname"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_below="@+id/chuy"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btnxn">

        </Button>
    </RelativeLayout>



    <TextView
        android:id="@+id/cham"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/rel"
        android:gravity="center"
        android:text="Chạm để thoát"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="italic">

    </TextView>
</RelativeLayout>