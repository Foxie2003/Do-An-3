<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/nestedScrollView"
    android:background="@drawable/backshopavt"
    android:descendantFocusability="blocksDescendants"
    tools:context=".views.cuahangvatpham">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/title"
            android:background="@drawable/thongtin">
        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/thongtin"
            android:layout_below="@+id/title"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_margin="20dp">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:paddingTop="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:id="@+id/avt1"
                android:src="@drawable/avt3"
                android:background="@drawable/khung2">
            </ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvnameNG"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name: Thank Binh"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/sedgwickave_regular">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:id="@+id/hightCore"
                    android:text="High score: 100"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/sedgwickave_regular">
                </TextView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/linmua"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ruby: 22"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_weight="1"
                        android:id="@+id/ruby"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/sedgwickave_regular">
                    </TextView>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ruby">
                    </ImageView>
                </LinearLayout>
                <ImageButton
                    android:layout_width="88dp"
                    android:layout_height="33dp"
                    android:layout_marginTop="13dp"
                    android:id="@+id/btndoiten"
                    android:background="@drawable/btndoi">
                </ImageButton>
            </LinearLayout>
        </LinearLayout>

        <HorizontalScrollView
            android:layout_below="@+id/thongtin"
            android:id="@+id/muaruby"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="30dp"
            android:background="@drawable/shoprubb">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical">
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="5dp"
                        android:src="@drawable/hhhvid"
                        android:background="@drawable/backruby"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 ruby"
                        android:fontFamily="@font/sedgwickave_regular"
                        android:textColor="#E6780D"
                        android:textStyle="bold"
                        android:textSize="21dp"
                        android:layout_gravity="center" />
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_marginTop="10dp"
                        android:id="@+id/iv_shop_watch"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/vid"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="5dp"
                        android:src="@drawable/hhh20k"
                        android:background="@drawable/backruby"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100 ruby"
                        android:textColor="#E6780D"
                        android:fontFamily="@font/sedgwickave_regular"
                        android:textStyle="bold"
                        android:textSize="21dp"
                        android:layout_gravity="center" />
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:textColor="#F65430"
                        android:id="@+id/ruby_20k"
                        android:background="@drawable/hh20k" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="5dp"
                        android:src="@drawable/hhh50k"
                        android:background="@drawable/backruby"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500 ruby"
                        android:fontFamily="@font/sedgwickave_regular"
                        android:textColor="#E6780D"
                        android:textStyle="bold"
                        android:textSize="21dp"
                        android:layout_gravity="center" />
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:id="@+id/ruby_50k"
                        android:background="@drawable/hh50k" />
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <ImageView
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:id="@+id/vatpham"
            android:layout_below="@+id/muaruby"
            android:layout_centerHorizontal="true"
            android:background="@drawable/vatpham">
        </ImageView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/cohoanh"
            android:layout_below="@+id/vatpham"
            android:layout_centerHorizontal="true"
            android:background="@drawable/cohoanh">
        </ImageView>
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tl_shop_tablayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/cohoanh"
            android:background="#00000000"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />
        <com.example.dhbc.Custom.CustomViewPager
            android:id="@+id/vp_shop_viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tl_shop_tablayout" />
