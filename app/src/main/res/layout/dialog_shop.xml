<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/botron"

    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:src="@drawable/cuahang1"

            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:layout_marginBottom="-10dp"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:background="@drawable/botron2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:id="@+id/line1"
            android:layout_weight="3">

            <LinearLayout

                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:backgroundTint="#FFEB3B">
                <LinearLayout
                    android:id="@+id/mua1"                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:layout_margin="10dp"
                    android:weightSum="3"
                    android:background="@drawable/botron3">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:src="@drawable/box_rupy1">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1200 Ruby"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textSize="20dp"
                        android:layout_weight="2"
                        android:layout_marginLeft="25dp"
                        android:textColor="@color/black">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="99K"
                        android:backgroundTint="#FA92B6"
                        android:layout_gravity="center"
                        android:textSize="20dp"
                        android:layout_weight="2"
                        android:background="@drawable/mess1"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:layout_marginLeft="25dp"
                        android:textColor="@color/black">
                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:layout_margin="10dp"
                    android:weightSum="3"
                    android:id="@+id/mua2"
                    android:background="@drawable/botron3">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:src="@drawable/pots_rupy">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500 Ruby"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textSize="20dp"
                        android:layout_weight="2"
                        android:layout_marginLeft="25dp"
                        android:textColor="@color/black">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50K"
                        android:backgroundTint="#FA92B6"
                        android:layout_gravity="center"
                        android:textSize="20dp"
                        android:layout_weight="2"
                        android:background="@drawable/mess1"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:layout_marginLeft="35dp"
                        android:textColor="@color/black">
                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:id="@+id/mua3"
                    android:layout_margin="10dp"
                    android:weightSum="3"
                    android:background="@drawable/botron3">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:src="@drawable/rupys">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="200 Ruby"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textSize="20dp"
                        android:layout_weight="2"
                        android:layout_marginLeft="25dp"
                        android:textColor="@color/black">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20K"
                        android:backgroundTint="#FA92B6"
                        android:layout_gravity="center"
                        android:textSize="20dp"
                        android:layout_weight="2"
                        android:background="@drawable/mess1"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:layout_marginLeft="35dp"
                        android:textColor="@color/black">
                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:id="@+id/xemvideo"
                    android:layout_margin="10dp"
                    android:weightSum="3"
                    android:background="@drawable/botron3">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ruby">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13 Ruby"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textSize="20dp"
                        android:layout_weight="2"
                        android:layout_marginLeft="30dp"
                        android:textColor="@color/black">
                    </TextView>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:textSize="20dp"
                        android:layout_weight="2"
                        android:background="@drawable/batdau"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:layout_marginLeft="75dp"
                        android:textColor="@color/black">
                    </TextView>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/closebuy"
        android:layout_gravity="start"
        android:layout_marginLeft="-20dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/wrongtick" />
</LinearLayout>