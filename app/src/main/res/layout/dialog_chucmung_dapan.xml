<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="455dp"
    android:paddingBottom="5dp"
    android:background="@drawable/backchucmung">

    <ImageView
        android:id="@+id/chucmung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/chucmung">
    </ImageView>

    <ImageView
        android:id="@+id/asdang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/asdang">
    </ImageView>
    <TextView
        android:id="@+id/dapan"
        android:layout_marginTop="-20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Báo cáo"
        android:layout_below="@+id/chucmung"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#FF5722">
    </TextView>

    <ImageView
        android:id="@+id/ruby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/congrub">
    </ImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textStyle="italic"
        android:id="@+id/cong"
        android:textColor="#9C27B0"
        android:text="Bạn được cộng 3 Ruby"
        android:layout_below="@+id/asdang"
        android:layout_marginTop="-125dp"
        android:gravity="center">
    </TextView>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/tieptuc"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/cong"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btntiep">
    </androidx.appcompat.widget.AppCompatButton>

</RelativeLayout>