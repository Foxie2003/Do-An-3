<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/backchoi"
    android:id="@+id/deme">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:background="@drawable/titlelv">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="66dp"
            android:id="@+id/back1"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/loa">
        </ImageView>
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/level"
            android:text="6"
            android:layout_gravity="center"
            android:background="@drawable/level"
            android:textSize="42dp"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:layout_weight="1.6"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:textAlignment="center">
        </TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"

            android:weightSum="2"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22"
                android:textSize="32dp"
                android:layout_weight="1"
                android:id="@+id/ruby"
                android:textAlignment="viewEnd"
                android:textColor="@color/black">
            </TextView>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ruby">
            </ImageView>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đây là gì?"
        android:layout_margin="20dp"
        android:textSize="32dp"
        android:textColor="@color/white">
    </TextView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="@drawable/backgroundimg"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="23dp"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            app:cardBackgroundColor="#222121"
            android:backgroundTint="#222121"

            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_2"
                android:scaleType="centerInside"
                android:backgroundTint="#222121"
                android:layout_gravity="center"
                android:src="@drawable/hoidong">
            </ImageView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listcauhoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp">

        </androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:weightSum="2">

        <ImageView
            android:id="@+id/napvip"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/shop">

        </ImageView>
        <Button
            android:id="@+id/demonext"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Next"
            android:layout_centerHorizontal="true"
            android:src="@drawable/shop"
            android:visibility="gone">

        </Button>
        <ImageView
            android:id="@+id/help"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/help">
        </ImageView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center"
        android:padding="25dp"
        android:orientation="vertical">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/dapan">
        </androidx.recyclerview.widget.RecyclerView>


    </LinearLayout>


</TableLayout>
