<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SreachPhongOnl"
    android:gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn chế độ"/>
    <Button
        android:id="@+id/btn_challenge_find_match"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tìm đối thủ"/>
    <Button
        android:id="@+id/btn_challenge_create_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tạo phòng"/>
    <Button
        android:id="@+id/btn_challenge_find_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tìm phòng"/>
</LinearLayout>