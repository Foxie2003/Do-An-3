<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.layout_home2"
    android:background="@drawable/background_chon">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/res1"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/thongtin"
        android:orientation="horizontal"

        android:layout_margin="20dp">
      <ImageView
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:paddingTop="15dp"
          android:paddingLeft="15dp"
          android:paddingRight="15dp"
          android:id="@+id/avt1"
          android:src="@drawable/avt3"
          android:background="@drawable/khung2">
      </ImageView>
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="8dp"
          android:layout_gravity="center"
          android:orientation="vertical">
        <TextView
            android:id="@+id/tvnameNG"
            android:textStyle="bold"
            android:textSize="16dp"
            android:fontFamily="@font/sedgwickave_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User"
            android:textColor="#FFC107">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:fontFamily="@font/sedgwickave_regular"
            android:textStyle="bold"
            android:id="@+id/hightCore"
            android:text="High score: 0"
            android:textColor="#FFC107">
        </TextView>


      </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignRight="@+id/thongtin"
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="@drawable/khungtien"
        android:layout_centerVertical="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"
            android:layout_weight="1"
            android:fontFamily="@font/sedgwickave_regular"
            android:id="@+id/ruby3"
            android:textColor="@color/colorPrimary">
        </TextView>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/ruby">
        </ImageView>
      </LinearLayout>

  </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/tieude"
        android:id="@+id/tieude"
        android:layout_below="@+id/res1">
    </ImageView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/lin2"
        android:layout_below="@+id/tieude" >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnChoiNgay"
            android:layout_width="230dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_choingay">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnChoiLai"
            android:layout_width="230dp"
            android:layout_height="80dp"
            android:layout_below="@+id/btnChoiNgay"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_choilai">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBXH"
            android:layout_width="230dp"
            android:layout_height="80dp"
            android:layout_below="@+id/btnChoiLai"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_bxh">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnThoat"
            android:layout_width="230dp"
            android:layout_height="80dp"
            android:layout_below="@+id/btnBXH"
            android:layout_marginTop="5dp"
            android:layout_centerInParent="true"
            android:background="@drawable/button_thoat">
        </androidx.appcompat.widget.AppCompatButton>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/lin2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"

        android:layout_marginBottom="50dp">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/login"
            android:background="@drawable/icon_shop">
        </androidx.appcompat.widget.AppCompatButton>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/shop"
            android:background="@drawable/icon_shop">
        </androidx.appcompat.widget.AppCompatButton>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/setting"
            android:layout_marginLeft="5dp"
            android:background="@drawable/icon_setting">
        </androidx.appcompat.widget.AppCompatButton>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/share"
            android:layout_marginLeft="5dp"
            android:background="@drawable/icon_share">
        </androidx.appcompat.widget.AppCompatButton>
    </LinearLayout>

  </RelativeLayout>